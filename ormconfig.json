{
    "type": "sqlite",
    "database": "database.sqlite",
    "synchronize": true,
    "logging": true,
    "dropSchema": true,
    "entities": ["build/src/entity/**/*.js"],
    "migrations": ["build/src/migration/**/*.js"],
    "subscribers": ["build/src/subscriber/**/*.js"],
    "cli": {
        "entitiesDir": "src/entity",
        "migrationsDir": "src/migration",
        "subscribersDir": "src/subscriber"
    }
}
